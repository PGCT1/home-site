extends ../layout

append parameters
	- setParam('title', 'Project Gemini: Top-Quality, Cutting-Edge Software Engineering')

block header
	link(href='http://fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css')

	link(href='/styles/index/index.css' rel='stylesheet' type='text/css')

	link(href='/styles/angular-carousel.min.css' rel='stylesheet' type='text/css')

	script(src='/js/angular-carousel.min.js' type='text/javascript')

	script(src='/js/index.js' type='text/javascript')

block content
	#indexSlides
		.opening-slide
			.main-center-block
				.logo
				.headers
					.title Gemini
					.subtitle
						.no-wrap Software Engineering.
						.no-wrap Absolute perfection.
			.links
				a(href='/philosophy') Philosophy
				a(href='/projects') Projects
				a(href='/team') Team
				a(href='/blog') Blog